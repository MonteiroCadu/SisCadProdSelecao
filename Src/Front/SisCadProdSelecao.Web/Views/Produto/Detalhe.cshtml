@model ProdutoViewModel

<partial name="_Titulo"/>

<form asp-controller="Cliente" asp-action="Save" method="post">
    <div class="card rounded shadow-sm ">
          <div class="p-3">
           
            
            @{if(ViewData["Error"] != null)
            {
                <div class="text-danger">@{this.Write(ViewData["Error"]);}
                </div>
            } }               
            
            
              <div class="row mb-3">               
                <div class="form-group col-md-8"> 
                    <input type="hidden" id="id" name="id" value="@ViewData["Id"]"/>
                    <label asp-for="Produto.Nome">Nome do produto</label>                      
                    <input type="text" asp-for="Produto.Nome" class="form-control" placeholder="Insira o do produto" required/>                     
                    <span asp-validation-for="Produto.Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label >Categoria</label>
                    @Html.DropDownListFor(model => model.Produto.CategoriaId, new SelectList(Model.Categorias, "Id", "Nome"), "Selecione ", new { @class="form-select" })    
                    <span asp-validation-for="Produto.CategoriaId" class="text-danger"></span>
                </div>
              </div>
              <div class="row mb-3">
                <div class="form-group col-md-8">
                    <label >Descrição</label>
                    <input type="text" asp-for="Produto.Descricao" class="form-control"  placeholder="Insira a descrição">                    
                </div>
                <div class="form-group col-md-4">
                    <label >Estoque</label>
                    <input type="tel" asp-for="Produto.Estoque" class="form-control" placeholder="Insira a quantida de estoque" required>     
                    <span asp-validation-for="Produto.Estoque" class="text-danger"></span>
                </div>
              </div>
                   
          </div>

          <div class="card-footer">
              <div class="d-flex">              
                @if(Model != null)
                {
                     <a class="btn btn-outline-secondary mr-auto border" href="@Url.Action("Edit", new {id = Model.Produto.Id})">Cancelar Alteração </a>
                } else
                {
                    <a class="btn btn-outline-secondary mr-auto border" >Cancelar Alteração</a>
                }

                  <button class="btn btn-success" >
                      Salvar
                  </button>
              </div>
        </div>
    </div>    
</form>